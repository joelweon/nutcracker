<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="nutcracker.dao.CompanyDao">

  <resultMap type="hashmap" id="map">
    <id     column="cpno"     property="companyNo"/>
    <result column="cp_name"  property="companyName"/>
    <result column="parno"    property="parentNo"/>
    <result column="chino"    property="childNo"/>
  </resultMap>
  
  <select id="getParents" resultMap="map">
    select distinct parno from com_rls
  </select>
  
  <select id="getChildren" parameterType="String" resultMap="map">
    select chino from com_rls where parno=#{parent}
  </select>
  
  <select id="searchMaker" parameterType="String" resultMap="map">
    select 
      cp_name
   from comp
   where cp_name like concat('%',#{value},'%')
  </select>
  
</mapper>