<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="nutcracker.dao.CompanyDao">

  <resultMap type="hashmap" id="map">
    <id     column="cpno"     property="companyNo"/>
    <result column="cp_name"  property="companyName"/>
    <result column="parno"    property="parentNo"/>
  </resultMap>
  
  <select id="getParents" resultMap="map">
    select * from comp where parno=0
  </select>
  
  <select id="getChildren" parameterType="String" resultMap="map">
    select * from com_rls where parno=#{parent}
  </select>
</mapper>